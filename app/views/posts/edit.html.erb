<h2> Edit Post Form </h2>

<%= form_for @post do |f| %>

    <%= f.label "Blogger:" %><br>
    <%= f.collection_selection :blogger_id, Blogger.all, :id, :name %><br>

    <%= f.label "Destination:" %><br>
    <%= f.collection_selection :destination_id, Desintation.all, :id, :name %><br>

    <%= f.label "Title:" %><br>
    <%= f.text_field :title %><br>
    
    <%= f.label "Content:" %><br>
    <%= f.text_field :content %><br>

    <%= f.submit %>

<% end %>